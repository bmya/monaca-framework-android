<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="MonacaSlideTheme" parent="@android:style/Theme.Black.NoTitleBar">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@style/Animation.MonacaSlideActivity</item> 
	</style>
	
	<style name="Animation.MonacaSlideActivity" parent="android:Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/monaca_slide_open_enter</item>
		<item name="android:activityOpenExitAnimation">@anim/monaca_slide_open_exit</item>
		<item name="android:activityCloseEnterAnimation">@anim/monaca_slide_close_enter</item>
		<item name="android:activityCloseExitAnimation">@anim/monaca_slide_close_exit</item>
	</style>
	
	<style name="MonacaDialogTheme" parent="@android:style/Theme.Black.NoTitleBar">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@style/Animation.MonacaDialogActivity</item> 
	</style>
	
	<style name="Animation.MonacaDialogActivity" parent="android:Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/monaca_dialog_open_enter</item>
		<item name="android:activityOpenExitAnimation">@anim/monaca_dialog_open_exit</item>
		<item name="android:activityCloseEnterAnimation">@anim/monaca_dialog_close_enter</item>
		<item name="android:activityCloseExitAnimation">@anim/monaca_dialog_close_exit</item>
	</style>
	
</resources>